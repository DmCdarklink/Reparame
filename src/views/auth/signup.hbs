<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registrate</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" class="needs-validation" novalidate method="POST">
                        <div class="form-group">
                            <input type="phone" name="Rut" placeholder="Ingrese Rut" class="form-control" autofocus
                                   required>
                            <small id="passwordHelpBlock" class="form-text text-muted">
                                Sin puntos ni guión. Ejemplo: 104561659
                            </small>
                        </div>
                        <div class="invalid-feedback">
                            Se ve bien!
                        </div>

                        <div class="form-group">
                            <input type="text" name="Nombres" placeholder="Ingrese Nombre" class="form-control"
                                   required>
                        </div>

                        <div class="form-group">
                            <input type="text" name="Apellidos" placeholder="Ingrese Apellidos" class="form-control"
                                   required>
                        </div>

                        <div class="form-group">

                            <input type="number" placeholder="Ingrese Teléfono" name="Telefono" class="form-control"
                                   aria-describedby="passwordHelpBlock" required>
                            <small id="passwordHelpBlock" class="form-text text-muted">
                                Solo 9 números de teléfono. Ejemplo: 955168245
                            </small>
                        </div>
                        {{#if tipo}}
                        <div class="form-group">
                            <select id="tipo" name="tipo" class="form-control">
                                <option value="{{tipo.0.Indice}}">{{tipo.0.Descripcion}}</option>
                                <option value="{{tipo.1.Indice}}">{{tipo.1.Descripcion}}</option>
                            </select>
                        </div>
                        {{/if}}

                        <div class="form-group">
                            <select class="custom-select" id="regiones" name="Region"></select>
                        </div>

                        <div class="form-group">
                            <select class="custom-select" id="comunas" name="Comuna"></select>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="Direccion" placeholder="Ingrese su dirección"
                                   required>
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-control" name="Email" placeholder="Ingrese su correo"
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="password">Ingresa tu contraseña</label>
                            <input type="password" name="Password" class="form-control"
                                   aria-describedby="passwordHelpBlock" required>
                            <small id="passwordHelpBlock" class="form-text text-muted">
                                Tu contraseña debe contener al menos 8 letras o números sin caracteres especiales
                            </small>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label" for="invalidCheck">
                                    Al registrarte aceptas nuestros terminos y condiciones
                                </label>
                                <div class="invalid-feedback">
                                    Necesitas aceptar los terminos y condiciones
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Registrarte</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

